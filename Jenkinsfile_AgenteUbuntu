pipeline {
    agent none

    stages {
        stage('Get code') {
            agent {
                label 'Agente_Code'
            }
            steps {
                // Obtener c√≥digo del repositorio
                git 'https://github.com/Integra24/Repository001.git'
                sh 'whoami'

                stash includes: 'app/**',  name: 'tempo_app'
                stash includes: 'test/**',  name: 'tempo_test'
            }
        }
        stage('Build') {
             agent any
             steps {
                echo 'Eyyy, esto es Python. No hay que compilar nada'
                echo WORKSPACE
                sh 'dir'
            }
        }

        stage('Test') {
            parallel {
                stage('Unit') {
                    agent { 
                        label 'Agente_Unit'
                    }
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                            unstash 'tempo_app'
                            unstash 'tempo_test'
                            sh '''
                                whoami
                                export PYTHONPATH=$WORKSPACE
                                pytest --junitxml=result-unir.xml test/unit
                            '''
                        }    
                    }                
                }
        
                stage('Rest') {
                    agent {
                        label 'Agente_Rest'
                    }
                    steps {
                        unstash 'tempo_app'
                        unstash 'tempo_test'
                        sh '''
                            whoami
                            export FLASK_APP=app/api.py
                            /usr/local/bin/flask run &
                            sleep 3s
                            java -jar /tmp/wiremock-standalone-3.5.4.jar --port 9090 --root-dir test/wiremock &
                            sleep 5s
                            PYTHONPATH=$WORKSPACE
                            pytest --junitxml=result-rest.xml test/rest
                            whoami
                        '''
                    }
                }
            }
        }

        stage('Result') {
            agent any
            steps {
                pwd
                junit 'result*.xml'
                echo 'FINISH!!!'
            }
        }  
        
    }
}
